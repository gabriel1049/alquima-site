# Habilita a reescrita de URLs
RewriteEngine On

# REDIRECIONA URLs ANTIGAS PARA A HOME
RewriteCond %{HTTP_HOST} ^www\.alquima\.com\.br$ [NC,OR]
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://alquima.com.br/ [R=301,L]

RewriteRule ^(esquadrias-de-aluminio|envidracamento-de-sacadas|janela-de-aluminio|perfil-de-aluminio|produtos/linha-suprema|escadas-de-aluminio|portas-e-janelas-de-aluminio-direto-da-fabrica|arremates-de-aluminio|guarda-corpo|perfil-de-aluminio-para-portas|linha-suprema|portao-de-aluminio|corrimao-de-aluminio|perfil-de-aluminio-para-vidro|box-aluminio|contramarco|esquadrias-de-aluminio-sob-medida|porta-de-aluminio|contato|produtos/perfil|home-5|produtos|perfil-aluminio-batente-porta|produtos/fachada|perfil-aluminio-tela-mosquiteiro|conheca-producao-tubos-aluminio|perfil-de-aluminio-quadrado|conexoes-de-aluminio|perfil-de-aluminio-redondo|produtos/contramarco|cantoneira-de-aluminio|home)/?$ https://alquima.com.br/ [R=301,L]

# Corrige problemas com CSS/JS/Imagens quebradas
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)$ index.php [L]

# Define o charset padrão
AddDefaultCharset UTF-8

# Expira cache de arquivos estáticos (melhora performance)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/x-javascript "access plus 1 month"
</IfModule>

# Protege arquivos sensíveis
<Files .htaccess>
  Order Allow,Deny
  Deny from all
</Files>

# Habilita compressão gzip (se disponível)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/x-javascript text/javascript
</IfModule>

